<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginStart="@dimen/margin_8dp"
        app:cardElevation="5dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/note_item_list_priority"
                android:layout_alignParentEnd="true"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/note_item_list_title"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/note_item_list_priority"
                android:text="Title"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_16sp"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_below="@+id/note_item_list_title"
                android:id="@+id/note_item_list_description"
                android:layout_width="wrap_content"
                android:text="description"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>